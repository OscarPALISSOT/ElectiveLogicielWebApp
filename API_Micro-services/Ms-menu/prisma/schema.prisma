generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Menu {
  menuId      String   @id @default(auto()) @map("_id") @db.ObjectId
  restaurant  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  price       Float
  description String
  dishIds     String[] @db.ObjectId
  dishs       Dish[]   @relation(fields: [dishIds], references: [dishId])
}

model Dish {
  dishId      String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  price       Float
  description String
  menuIds     String[] @db.ObjectId
  menu        Menu[]   @relation(fields: [menuIds], references: [menuId])
}
